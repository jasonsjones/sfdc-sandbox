    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "debug": "^2.6.1",
    "eslint": "^3.16.1",
    "mocha": "^3.2.0",
